extends layout

block content
  h1= title
  h2= errorMessage
  form.loginpanel(method='post')
    .txt
      input(id="username" name="username" type="text" placeholder="Username")
      label(for="username")
    .txt
      input(id="password" name="password" type="password" placeholder="Password")
      label(for="pwd")
    .buttons
      input(type="submit" value="Login")
      span
        a.register(href="/register") Register
    .hr
      div
      div OR
      div
    .social
      a.facebook(href="javascript:void(0)")
      a.twitter(href="javascript:void(0)")
      a.googleplus(href="javascript:void(0)")
  span.resp-info